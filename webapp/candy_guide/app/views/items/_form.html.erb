<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :item_type %><br>
    <%= select('item', 'item_type', Item::ITEM_TYPES, {include_blank: false }) %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
  </div>
  <div class="field">
    <%= f.label :schedule %><br>
    <%= f.datetime_select :schedule %>
  </div>
  <div class="field">
    <%= f.label :city_id %><br>
    <%= collection_select(:item, :city_id, City.all, :id, :name, { include_blank: false } ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
